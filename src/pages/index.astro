---
import Layout from "../layouts/Layout.astro";
import Link from "../components/Link.svelte";
import { FileText, Github, Linkedin } from "lucide-svelte";

const title = `Anton Bubel's Portfolio | Senior Full-Stack Developer | Team/Tech Lead`;
const description = `Experienced Full-Stack Developer and Team/Tech Lead with over 5+ years of experience building web applications.`;
const proflePicture = "/images/profile.webp";
---

<Layout {title} {description} image={proflePicture}>
  <main class="container py-20">
    <div
      class="flex flex-col md:flex-row justify-center items-center gap-6 pb-6"
    >
      <img
        alt="Anton Bubel"
        class="rounded-full w-32 h-32 animate-fade"
        src={proflePicture}
        srcset="
          /images/profile-picture.320w.webp 320w,
          /images/profile-picture.480w.webp 480w
        "
      />
      <div class="prose text-center md:text-left">
        <h1
          class="mb-2 inline-block overflow-hidden whitespace-nowrap font-mono animate-typing border-r-4 text-2xl sm:text-3xl"
        >
          Hi there, I'm
          <span class="text-primary">Anton</span><span class="pl-2">ðŸ‘‹</span>
        </h1>
        <p class="mt-0 font-mono text-lg animate-fade">
          a <span class="text-highlighted">passionate full-stack developer</span
          > and a
          <span class="text-highlighted">team/tech lead</span> with <span
            class="text-highlighted">over 5+ years of experience</span
          >
          building web applications.
        </p>
      </div>
    </div>
    <div class="flex justify-center gap-3">
      <Link
        href="/files/anton-bubel-resume.pdf"
        target="_blank"
        className="btn btn-outline btn-primary btn-sm"
        ariaLabel="Open CV in a new tab"
        client:idle
      >
        <FileText />
        CV
      </Link>
      <Link
        href="https://github.com/antonbubel/"
        target="_blank"
        ariaLabel="Open GitHub profile in a new tab"
        rel="noopener noreferrer"
        className="btn btn-sm btn-secondary btn-outline"
        client:idle
      >
        <Github />
      </Link>
      <Link
        href="https://www.linkedin.com/in/antonbubel/"
        target="_blank"
        ariaLabel="Open LinkedIn profile in a new tab"
        rel="noopener noreferrer"
        className="btn btn-sm btn-accent btn-outline"
        client:idle
      >
        <Linkedin />
      </Link>
    </div>
  </main>
</Layout>
